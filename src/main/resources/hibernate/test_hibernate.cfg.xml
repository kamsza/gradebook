<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
        <property name="connection.url">jdbc:derby://127.0.0.1/dziennik_test;create=true</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="pl.edu.agh.jdziennik.model.Grade"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Teacher"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Student"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Subject"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Lesson"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.WeekTerm"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Classroom"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.ClassSubject"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.TeachingClass"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Assignment"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.GradeType"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Parent"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.Attendance"></mapping>
        <mapping class="pl.edu.agh.jdziennik.model.TimeWindow"></mapping>
    </session-factory>
</hibernate-configuration>
