<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:id="rootBox"
          fx:controller="pl.edu.agh.jdziennik.controller.adminmode.AddParentController">

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="120.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="125.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" prefHeight="10.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="40.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="40.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="40.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="40.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="10.0"/>
    </rowConstraints>


    <Label text="imiÄ™:" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font name="System Italic" size="16.0"/>
        </font>
    </Label>
    <TextField fx:id="nameField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Label text="nazwisko:" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font name="System Italic" size="16.0"/>
        </font>
    </Label>
    <TextField fx:id="surnameField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Label text="telefon:" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <font>
            <Font name="System Italic" size="16.0"/>
        </font>
    </Label>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3">
        <Button text="Dodaj" fx:id="addButton" minWidth="120.0" maxWidth="120" onAction="#handleAddAction"/>
    </HBox>
</GridPane>