<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:id="rootBox"
          fx:controller="pl.edu.agh.jdziennik.controller.adminmode.AddTeacherController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="120.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="150.0"/>
        <ColumnConstraints hgrow="ALWAYS" prefWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" prefHeight="10.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="70.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="70.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="70.0"/>
        <RowConstraints vgrow="ALWAYS" prefHeight="10.0"/>
    </rowConstraints>

    <Label text="imiÄ™:" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font name="System Italic" size="18.0"/>
        </font>
    </Label>
    <TextField fx:id="nameField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Label text="nazwisko:" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font name="System Italic" size="18.0"/>
        </font>
    </Label>
    <TextField fx:id="surnameField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="5" alignment="CENTER">
        <Button text="Dodaj" fx:id="addButton" prefWidth="100.0" onAction="#handleAddAction"/>
    </HBox>
</GridPane>
