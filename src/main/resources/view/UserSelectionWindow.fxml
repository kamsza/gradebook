<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx/8"
          fx:controller="pl.edu.agh.jdziennik.controller.UserSelectionController" alignment="CENTER" vgap="30"
          hgap="30">
    <Label text="Wybór użytkownika" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font size="30.0"/>
        </font>
    </Label>
    <ComboBox fx:id="teacherComboBox" prefWidth="150.0" onAction="#handleValueSelectionAction" GridPane.rowIndex="1"
              GridPane.columnIndex="0"/>
    <Button text="Wybierz" fx:id="chooseButton" prefWidth="100.0" onAction="#handleChooseAction" GridPane.rowIndex="1"
            GridPane.columnIndex="1"/>
    <Button text="Wejdź w tryb administratora" fx:id="adminButton" prefWidth="250.0" onAction="#handleAdminAction"
            GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
</GridPane>